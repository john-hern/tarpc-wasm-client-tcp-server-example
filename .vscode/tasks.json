{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"problemMatcher": [
				"$rustc"
			],
			"command": "cargo build -p server",
			"group": "build",
			"label": "Rust: cargo build -p server"
		},
		{
			"type": "shell",
			"command": "wasm-pack build --target web --out-name wasm --out-dir ./static --debug",
